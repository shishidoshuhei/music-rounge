    <header id="header", class="header">
      <!-- ログイン時のヘッダー -->
      <% if user_signed_in? %>
        <nav class="nav">
          <div class="container">
            <div class="nav-bar">
              <ul class="nav-items">
                <li>
                  <h1><%= link_to "MusicRounge", posts_path %></h1>
                </li>
                <li class="nav-item">
                  <%= link_to "マイページ", user_path(current_user.id), class: "nav-link btn btn-primary" %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規投稿", new_post_path, class: "nav-link btn btn-primary" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, class: "nav-link btn btn-primary" %>
                </li>
                <li class="nav-item">
                  <%= search_form_for @search do |f| %>
                    <%= f.search_field :title_or_body_cont %>
                    <%= f.submit "検索" %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <!-- ログインしていない時のヘッダー-->
        <% else %>
          <nav class="nav">
          <div class="container">
            <div class="nav-bar">
              <ul class="nav-items">
                <li>
                  <h1><%= link_to "MusicRounge", posts_path %></h1>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path, class: "nav-link btn btn-primary" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: "nav-link btn btn-primary" %>
                </li>
                <li class="nav-item">
                  <%= search_form_for @search do |f| %>
                    <%= f.search_field :title_or_body_cont %>
                    <%= f.submit "検索" %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% end %>
    </header>
